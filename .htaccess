<IfModule mod_rewrite.c>
RewriteEngine on

# Redirect to PHP if it exists.
# e.g. example.com/foo will display the contents of example.com/foo.php
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^(.+)$ $1.php [L,QSA]

RewriteRule ^([a-zA-Z0-9-/]+)/preview$ /post.php?s=$1&preview=all [L]

#Below excludes Perch directory from rewrites
RewriteRule ^perch - [L]
RewriteRule ^([a-zA-Z0-9-/]+)$ /post.php?s=$1 [L]


RewriteRule ^category/([a-zA-Z0-9-/]+)/page/([0-9]+)/{0,1}$ /archive.php?cat=$1&page=$2 [L]
RewriteRule ^category/([a-zA-Z0-9-/]+)$ /archive.php?cat=$1 [L]

RewriteRule ^date/([a-zA-Z0-9-/]+)/page/([0-9]+)/{0,1}$ /archive.php?year=$1&page=$2 [L]
RewriteRule ^date/([a-zA-Z0-9-/]+)$ /archive.php?year=$1 [L]

RewriteRule ^tag/([a-zA-Z0-9-/]+)/page/([0-9]+)/{0,1}$ /archive.php?tag=$1&page=$2 [L]
RewriteRule ^tag/([a-zA-Z0-9-/]+)$ /archive.php?tag=$1 [L]


</IfModule>
